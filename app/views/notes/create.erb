<h1>Notes &amp; Notes &amp; Notes</h1>

<ul>
  <% @note.errors.each do |attr, message| %>
    <li class="error"><%= attr.upcase %> <%= message.upcase %></li>
  <% end %>
</ul>

<form action="/notes" method="post">
  <label name="title">Title: </label>
  <input type="text" name="note[title]" value="<%= @note.title %>">
  <br><br>
  <label name="content">Content: </label>
  <input type="text" name="note[content]" value="<%= @note.content %>">
  <br><br>
  <input type="submit" value="Got it.">
</form>